#:include pipe.kv

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "../Texture/sky.jpg"
            Rectangle:
                size : self.width, 138
                pos: self.pos[0], self.pos[1] + self.height -138
                texture: self.cloud_texture
            Rectangle:
                size:self.width, 96
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture

                

    Button:
        text: "Start game"
        size_hint: None,None
        background_normal:"../texture/transparent.png"
        background_down:"../texture/transparent.png"
        id : start_button
        on_release:
            self.disabled = True
            self.opacity = 0
            app.start_game()

    Bee:
        source: "../Texture/bee1.png"
        size_hint : None,None
        size : 46,34
        pos : 20,(root.height - 96) / 2.0
        id : bee