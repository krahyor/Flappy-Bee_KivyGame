#:include pipe.kv

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "../Texture/sky.jpg"
            Rectangle:
                size : self.width, 138
                pos: self.pos[0], self.pos[1] + self.height -138
                texture: self.cloud_texture
            Rectangle:
                size:self.width, 96
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture

    Button:
        text: "Start game"
        size_hint: None,None
        on_release:
            app.start_game()
    